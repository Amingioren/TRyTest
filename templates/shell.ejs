<!doctype html>
<html lang="en">
 
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= title %></title>
    <link rel="stylesheet" href="../assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="../assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="../assets/libs/css/style.css">
    <link rel="stylesheet" href="css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="dashboard-main-wrapper">
        <%- include('header.ejs') %>
        <%- include('sidebar.ejs') %>
        <div class="dashboard-wrapper">
            <div class="container-fluid dashboard-content">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <table class="table table-bordered table-hover">
                            <tr>
                                <td>
                                    <span class="fas fa-server"></span>
                                    Server Status : <b id="server-status">Disconnect</b>
                                </td>
                                <td>
                                    <span class="fas fa-mobile"></span>
                                    Device Status : <b id="device-status">Disconnect</b>
                                </td>
                            </tr>
                        </table>
                        <br />
                        <form autocomplete="off">
                            <div class="form-group">
                              <label for="cmd">Command:</label>
                              <div class="row">
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="cmd">
                                </div>
                                <div class="col-sm-2">
                                    <input value="Run" type="button" class="btn btn-success" id="btn-run">
                                </div>
                              </div>
                            </div>
                            <div class="form-group">
                              <label for="resultCmd">Result:</label>
                              <textarea class="form-control" id="resultCmd" style="height:400px;"></textarea>
                            </div>
                          </form>
                          
                
                    </div>
                </div>
            </div>
            <%- include('footer.ejs') %>
        </div>
    </div>
    <script src="../assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="../assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="../assets/libs/js/main-js.js"></script>
    <script src="js/socket.io.min.js"></script>
    <script>
        var serverStatus,deviceStatus,socket;
        serverStatus = $('#server-status');
        deviceStatus = $('#device-status');
        $(document).ready(function(){
            socket = io("<%= IO_URL %>?key=ac34c2c24de98e6b7a27fe4d90ec8374507821f6a967fcefc3cd9d96782f960e");
            socket.on('connect',function(){
                serverStatus.html('Connected');
            });
            socket.on('disconnect',function(){
                serverStatus.html('Disconnect');
            });
            socket.on('connect_error',function(err){
                console.log(err);
            });  
            socket.on('device_connect',function(){
                console.log('device_connect');
                deviceStatus.html('Connected');
            });
            socket.on('device_disconnect',function(){
                console.log('device_disconnect');
                deviceStatus.html('Disconnect');
            });

            $('#btn-run').click(function(){
                var cmd = $('#cmd').val().trim();
                if(cmd != "")
                {
                    socket.emit("sendCmd",{"cmd":cmd});
                }
            });

            socket.on('resultCmd',function(data){
                deviceStatus.html('Connected');
                $('#resultCmd').val(data);
            });




        });
    </script>
</body>
 
</html>